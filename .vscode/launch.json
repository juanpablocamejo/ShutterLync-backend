{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Watch-debug Server",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "outFiles": [
                "${workspaceFolder}/dist/src/index.js"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Watch-debug INITIALIZE-DB",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
            ],
            "outFiles": [
                "${workspaceFolder}/dist/src/initialization/index.js"
            ],
            "program": "${workspaceFolder}/src/initialization/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Watch-debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--verbose",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            }
        }
    ]
}