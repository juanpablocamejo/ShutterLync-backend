{
    // Vea https://go.microsoft.com/fwlink/?LinkId=733558 
    // para la documentaci√≥n acerca del formato tasks.json
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "'${workspaceRoot}/node_modules/.bin/tsc'",
            "args": [
                "-p",
                "'${workspaceRoot}/tsconfig.json'"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "postdebug",
            "type": "process",
            "command": [
                "${command:workbench.action.tasks.terminate}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
        },
    ]
}